{% extends 'base.html.twig' %}
{% block title %}Panier{% endblock %}
{% block addSheets %}
    <link rel="stylesheet" href="shopcss/StyleShop.css">
{% endblock %}
{% block body %}
<div class="bg-light p-3">
    <h1>Votre panier</h1>
</div>
    {% if items | length >0 %}
        <table class="table">
            <thread>
                <tr>
                    <th>Produit</th>
                    <th>Prix</th>
                    <th>Quantit√©</th>
                    <th>Total</th>

                </tr>
            </thread>
            <tbody>
            {% for item in items %}
                <tr>
                    <td>{{ item.product.name }}</td>
                    <td>{{ item.product.price }}</td>
                    <td>{{ item.quantity }}</td>
                    <td>{{ item.product.price * item.quantity }}</td>
                    <td>
                        <a href="{{ path('cart_remove', {'id':item.product.id}) }}" >
                            <img src="shopimages/delete.png" height="30px" width="30px">
                      </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
                <tr>
                    <td colpan="3" class="text-right">total :</td>
                    <td>{{ total }}</td>
                    <td></td>
                </tr>

        </table>
    {% else %}
    <p>Surprise, c'est vide !</p>

    {% endif %}

{% endblock %}