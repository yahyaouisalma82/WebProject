{% extends 'base.html.twig' %}

{% block title %}Hello ShopController!{% endblock %}

{% block imageRoulante %}
    <div class="slider">
        <div class="slides">
            <input type="radio" name="radio-btn" id="radio1">
            <input type="radio" name="radio-btn" id="radio2">
            <input type="radio" name="radio-btn" id="radio3">
            <input type="radio" name="radio-btn" id="radio4">

            <div class="slide first">
                <img src="public/shopimages/DogClothes.jpg" alt="">
            </div>
            <div class="slide">
                <img src="public/shopimages/DogFood.jpg" alt="">
            </div>
            <div class="slide">
                <img src="public/shopimages/DogHealth.jpg" alt="">
            </div>


            <div class="navigation-auto">
                <div class="auto-btn1"></div>
                <div class="auto-btn2"></div>
                <div class="auto-btn3"></div>
                <div class="auto-btn4"></div>
            </div>
        </div>
        <div class="navigation-manual">
            <label for="" class="manual-btn"></label>
            <label for="" class="manual-btn"></label>
            <label for="" class="manual-btn"></label>
            <label for="" class="manual-btn"></label>
        </div>
    </div>
    <script type="text/javascript">
        var counter=1;
        setInterval(function(){
            document.getElementById('radio'+counter).checked = true;
            counter++;
            if(counter>4){
                counter=1;
            }
        },5000);
    </script>
{% endblock %}
