{% extends 'base.html.twig' %}
{% block addSheets %} <link rel="stylesheet" href="layout.css"> {% endblock %}
{% block body %}

    <section class="m-3">
        <div class="about-area section-padding 30">
            <div class="container" style="background-color: #f4f0ff">
                {% for pet in pets  %}
                    {% if pet.id  is even  %}
                <div class="row align-items-center justify-content-between padding-130">
                    <div class="col-lg-5 col-md-6">
                        <div class="about-details mb-40">
                            <h2>{{ pet.name }}</h2>
                            <p>
                                A lovely {{ pet.gender }} {{ pet.color }} pet<br>
                                {{ pet.age }} age <br>
                                {{ pet.description }}
                            </p>
                            <a href="#"class="btn btn-about">Adopt now</a>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-10">
                        <div class="about-img mb-40">
                            <img src="{{ pet.photoFile }}"class="img-fluid" alt="">
                        </div>
                    </div>
                </div>
                    {% else %}
                 <div class="row align-items-center justify-content-between">
                    <div class="col-lg-6 col-md-6 col-sm-10">
                        <div class="about-img mb-40">
                            <img src="{{ pet.photoFile }}"class="img-fluid" alt="">
                        </div>
                    </div>
                    <div class="col-lg-5 col-md-6">
                        <div class="about-details mb-40">
                            <h2>{{ pet.name }}</h2>
                            <p>
                                A lovely {{ pet.gender }} {{ pet.color }} pet<br>
                                {{ pet.age }} age <br>
                                {{ pet.description }}
                            </p>
                            <a href="{{ path('contact') }}" class="btn btn-about">Adopt now</a>
                        </div>
                    </div>
                </div>
                        {% endif %}
                {% endfor %}
            </div>
        </div>
    </section>
    <!-- About  End-->

